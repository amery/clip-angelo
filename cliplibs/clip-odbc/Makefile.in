Local_Depend = include/*.ch

#LIBODBC=@LIBODBC@ $(C_LIBS)
LIBODBC+=-lodbc $(C_LIBS)
# Note: below we check if LIBOOB is empty when library is missed
#LIBOOB=@LIBOOB@
LIBOOB+=-lesoobclient
PROG = clip-odbc
PROG2 = clip-oob
ADDLIBS =
#+= $(LIBODBC)
ADDLIBS2 =
#+= $(LIBOOB)
OBJS=odbc_clip.o odbc.o
OBJS2= $(OBJS)
DOC = *.html

################################################################################################################

all : Makefile $(OBJS) $(OBJS2) $(STARGET) $(STARGET2)

cfg :
	$(E_cp)cp --remove-destination -fpu$(V) include/odbc.ch $(Clip_I_Dir)/

include $(Makefile_o_in)

install : all install-lib install-example install-doc

cleanc:
	$(E_rm)rm -rf$(V) odbc.c odbc_ref.c $(TARGET).* $(TARGET2)

distcleanc :
	$(E_rm)rm -rf$(V) *.g

include $(Makefile_end_in)

