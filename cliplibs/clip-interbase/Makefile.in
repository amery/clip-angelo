#
#                                            clip-interbase/Makefile.in
#
#  GNU make makefile
#
Local_Depend = include/*.ch
PROG = clip-interbase
IBROOT=/opt/interbase
C_FLAGS += -I$(IBROOT)/include
OBJS=ib_clip.o ib.o
ADDLIBS= -lgds -L$(IBROOT)/lib -lcrypt $(C_LIBS)
DOC = *.html

################################################################################################################

all: Makefile  have_lib $(STARGET)

cfg :
	$(E_cp)cp --remove-destination -fpu$(V) include/interbase.ch $(Clip_I_Dir)/

have_lib:
	$(E_if)test -f $(IBROOT)/include/ibase.h -o -f /usr/include/ibase.h

include $(Makefile_o_in)

install:all install-lib install-example install-doc

cleanc:
	$(E_rm)rm -rf$(V) ib.c $(TARGET).*

distcleanc :
	$(E_rm)rm -rf$(V) *.g

include $(Makefile_end_in)

