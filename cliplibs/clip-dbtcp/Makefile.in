#  GNU make makefile
#
ifndef CLIPROOT
	CLIPROOT=$(shell cd ../../../; pwd)/cliproot
endif
include $(CLIPROOT)/include/Makefile.inc

DBTCP_PATH=@DBTCP_PATH@
LIBDBTCP=$(DBTCP_PATH)/libs/libdbftp.a
DBTCPINCLUDE=-I$(DBTCP_PATH) -I$(DBTCP_PATH)/utils

TARGET=libclip-dbtcp$(DLLSUFF)
RTARGET=libclip-dbtcp$(DLLREALSUFF)
OBJS=dbtcp_clip.o dbtcp.o

all:  $(TARGET)

$(TARGET): $(OBJS)
	clip_makeslib$(SCRIPTSUFF) $(TARGET) $(OBJS) $(LIBDBTCP)

dbtcp_clip.o: dbtcp_clip.c
	$(CC) $(C_FLAGS) $(DBTCPINCLUDE) -c dbtcp_clip.c

dbtcp.o: dbtcp.prg
	clip$(EXESUFF): dbtcp.prg

install:all
	clip_cp$(SCRIPTSUFF) $(TARGET) $(DESTDIR)$(CLIPROOT)/lib

clean:
	rm -rf *.o dbtcp.c *.s *.bak *.a *.so *.dll *.exe dbtcp_ref.c *.ex *.nm *.log Makefile

distclean: clean
	rm -f Makefile
