#
#                                            clip-codb/Makefile.in
#

Local_Depend 		= 			include/*.ch
CLIPFLAGS 			+= 		-n
prg_files  			= 			$(sort 							\
												codb_list.prg 		\
												codb.prg 			\
												codb_funcs.prg 	\
												codb_oql.prg 		\
												codb_install.prg 	\
												codb_err.prg 		\
												codb_cache.prg 	\
												codb_cobra.prg 	\
												codb_uni.prg 		\
												list_id.prg 		\
												codb_dep.prg 		\
												codb_dict.prg 		\
												dict_dbf.prg 		\
												dep_dbf.prg 		\
												ext_dbf.prg 		\
												count_dbf.prg 		\
												dict_all.prg 		\
												dep_all.prg 		\
												codb_sql.prg 		\
												dict_sql.prg 		\
												dict_cobra.prg 	\
												dep_cobra.prg 		\
									)

PROG 					= 			clip-codb
PROG2 				= 			codb-query
prg_files2 			= 			$(sort 							\
												codb_query.prg 	\
												formatter.prg 		\
									)

ADDLIBS 				=
o_files 				= 			$(addsuffix .o, $(basename $(prg_files) $(c_files) ) )
o_files2 			= 			$(addsuffix .o, $(basename $(prg_files2) $(c_files2) ) )
SRC_C_files 		= 			$(sort $(c_files) )
SRC_PRG_files 		= 			$(sort $(prg_files)  $(prg_files2) )
export

######################################################################################
###################################################################################### local rules

all:   Makefile  $(o_files) $(o_files2) $(STARGET) $(STARGET2)

hash1 :
	$(E_xx)$(Clip_M_Dir)/init/LinkAllFiles.sh clip-codb

cfg :
	$(E_cp)cp --remove-destination -fpu$(V) include/*.ch $(Clip_I_Dir)/. 	|| true
	$(E_cp)cp --remove-destination -fpu$(V) include/*.h $(Clip_I_Dir)/. 		|| true
	$(E_cp)cp --remove-destination -Rfpu$(V) ./locale.po/* $(INSTDIR)/locale.po/

cleanc :
	$(E_rm)rm -f$(V) *.c *.b codb_mk clip_ab test
#|| true
	$(E_rm)rm -rf$(V) $(TARGET).* $(TARGET2).*

distcleanc :
	rm -rf$(V) *.g

install: all install-lib

include $(Makefile_o_in)

include $(Makefile_end_in)

indent : Makefile
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) *.h  || true
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) *.c  || true
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) */*.h  || true
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) */*.c  || true

