#
#                                            clip-gd/Makefile.in
#
Local_Depend = include/*.ch include/*.h

PROG = clip-gd
OBJS = _gd.o gd_obj.o
DOC = doc/*
ADDLIBS +=$(LIBDIRS)
export CFLAGS

################################################################################################################

cfg : include/gdcfg.h
	$(E_cp)cp --remove-destination -fpu$(V) include/gdinfo.ch $(Clip_I_Dir)/

test_lib :
	$(E_if)if [ -f /usr/lib$(C64)/libgd.so ] ; then 																\
		echo "gdlib ok" ;																										\
	else 																															\
		echo "Warning: Install lib$(C64)gd-static-XX.(rpm/deb) & libgd-tools -$(C64).(rpm/deb)"  ;	\
		error 	;																												\
	fi

include/gdcfg.h :
	$(E_xx)$(CONFIGURE_SH)

all : Makefile include/gdcfg.h test_lib $(STARGET)

install : all install-lib install-example install-doc

cleanc:
	$(E_rm)rm -rf$(V) gd_obj.c $(TARGET).* Makefile.inc include/gdcfg.h

distcleanc :
	$(E_rm)rm -rf$(V) *.g

include $(Makefile_o_in)

include $(Makefile_end_in)

