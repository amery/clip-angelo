#
#                                            clip-gtk2/example/gdk-pixbuf-demo/Makefile.in
#
Depend_on 				= 			$(Clip_L_Dir)/libclip-gtk2.so

prg_files 				=			$(sort 							\
													pixbuf_demo.prg 	\
													pixbuf_scale.prg 	\
													zoomimage.prg 		\
										)

exe_files 				= 			$(addsuffix $(EXESUFF), $(basename $(prg_files) ) )
SRC_PRG_files 			= 			$(prg_files)
LIBS 						+= 		-lclip-gtk2
export

######################################################################################
###################################################################################### local rules

all: Makefile $(exe_files)

install : all

hash1 :

cfg :

cleanc:
	$(E_rm)rm -f$(V) *.c
	$(E_rm)rm -f$(V) $(exe_files)

distcleanc :
	$(E_rm)rm -rf$(V) *.g

pixbuf_demo$(EXESUFF) : pixbuf_demo.prg $(CLIP) $(FULL_LIBCLIP) $(Depend_on)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -ewsl $< $(LIBS)

pixbuf_scale$(EXESUFF) : pixbuf_scale.prg $(CLIP) $(FULL_LIBCLIP) $(Depend_on)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -ewsl $< $(LIBS)

zoomimage$(EXESUFF) : zoomimage.prg $(CLIP) $(FULL_LIBCLIP) $(Depend_on)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -ewsl $< $(LIBS)

include $(Makefile_o_in)

include $(Makefile_end_in)

