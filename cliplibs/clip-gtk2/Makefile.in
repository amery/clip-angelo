CLIPFLAGS += -I. -I$(Clip_I_Dir)
export CC CFLAGS
export MEMDBG MEMDBGFLAGS

all: Makefile include/clip-gtkcfg2.h hash $(STARGET)

cfg :
	cp --remove-destination -fpu$(V) clip-gtk2.cliprc $(INSTDIR)/cliprc/
	cp --remove-destination -fpu$(V) include/clip-gtk2.ch include/gtk2-stock.ch include/clip-gtk2.h $(Clip_I_Dir)/

d: set_dbg

set_dbg: CDBGFLAGS=-g
set_dbg: all

include/clip-gtkcfg2.h :
	$(Trace)
	./configure

hash: include/_hashcode.h

include/_hashcode.h: $(HASHSRCS)
	$(Trace)
	clip_hashextract$(EXESUFF) $(HASHSRCS) | sort -u >include/_hashcode.h
	cmp include/_hashcode.h include/hashcode.h 2>/dev/null || cp --remove-destination -fpu$(V) include/_hashcode.h include/hashcode.h
	cp -fp$(V)  include/hashcode.h include/_hashcode.h

