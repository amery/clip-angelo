Depend_on 				= 			$(Clip_L_Dir)/libclip-xml.so
ADDLIBS 					= 			-lclip-xml
PROGS 					= 			$(sort 									\
													test_xml$(EXESUFF) 		\
													test$(EXESUFF)				\
										)

CLIPFLAGS 				+= 		-I../include
EXTRALIBS 				= 			-L$(Dir_Lib) -lexpat

export

######################################################################################
###################################################################################### local rules

all: Makefile $(PROGS)

install : all

hash1 :

cfg :

cleanc:
	$(E_rm)rm -f$(V) $(PROGS)
	$(E_rm)rm -f$(V) *.c *.b

distcleanc :
	$(E_rm)rm -rf$(V) *.g

test_xml$(EXESUFF): test_xml.prg $(CLIP) $(LIBCLIP) $(Depend_on)
	$(E_e)$(Trace_clip)
	$(CLIP) $(CLIPFLAGS) -o$@ -ewsln test_xml.prg $(ADDLIBS) $(EXTRALIBS)

test$(EXESUFF): test.prg $(CLIP) $(LIBCLIP) $(Depend_on)
	$(E_e)$(Trace_clip)
	$(CLIP) $(CLIPFLAGS) -o$@ -eswlg test.prg $(ADDLIBS) $(EXTRALIBS)

include $(Makefile_o_in)

include $(Makefile_end_in)

