#
#                                            clip-mysql/Makefile.in
#
#  GNU make makefile
#
Local_Depend = include/*.ch
PROG = clip-mysql
C_FLAGS += -I/usr/include/mysql -I/usr/local/include/mysql
OBJS=$(sort ms_clip.o ms.o )
ADDLIBS=-L/usr/lib/mysql -lmysqlclient $(C_LIBS)
DOC = *.html

################################################################################################################

all: Makefile  have_lib $(STARGET)

cfg :
	$(E_cp)cp --remove-destination -fpu$(V) include/mysql.ch $(Clip_I_Dir)/

have_lib:
	$(E_if)test -f /usr/include/mysql/mysql.h -o -f /usr/local/include/mysql/mysql.h

include $(Makefile_o_in)

install:all install-lib install-example install-doc

cleanc:
	$(E_rm)rm -rf$(V) ms.c

distcleanc :
	$(E_rm)rm -rf$(V) *.g

include $(Makefile_end_in)

