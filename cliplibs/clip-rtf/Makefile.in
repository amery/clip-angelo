#
#                                            clip-rtf/Makefile.in
#
#  GNU make makefile
#

Local_Depend 		= 			include/*.ch
CLIPFLAGS 			+= 		-n
prg_files  			= 			richtext.prg
PROG 					= 			clip-rtf
ADDLIBS 				=

o_files 				= 		$(addsuffix .o, $(basename $(prg_files) $(c_files) ) )
DOC 					= 			readme*
SRC_C_files 		= 			$(sort $(c_files) )
SRC_PRG_files 		= 			$(sort $(prg_files) )

export

######################################################################################
###################################################################################### local rules

all : Makefile $(o_files) $(STARGET)

hash1 :
	$(E_xx)$(Clip_M_Dir)/init/LinkAllFiles.sh clip-rtf

cfg :
	$(E_cp)cp --remove-destination -fpu$(V) include/ci_richtext.ch $(Clip_I_Dir)/
	$(E_cp)cp --remove-destination -fpu$(V) include/ci_objects.ch $(Clip_I_Dir)/

cleanc :
	$(E_rm)rm -f$(V) *.c $(TARGET).*

distcleanc :
	$(E_rm)rm -rf$(V) *.g

install : all install-lib install-example install-doc

include $(Makefile_o_in)

include $(Makefile_end_in)

indent : Makefile
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) *.h  || true
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) *.c  || true
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) */*.h  || true
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) */*.c  || true

