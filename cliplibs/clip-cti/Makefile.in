#
#                                            clip-cti/Makefile.in
#
Local_Depend 		= 			include/*.ch
PROG 					= 			clip-cti
CLIPFLAGS 			+= 		-n
prg_files 			= 											\
									ctiapp.prg 					\
									ctibin.prg 					\
									ctibox.prg 					\
									ctibrowsecombo.prg 		\
									cticalendar.prg 			\
									cticheckbox.prg 			\
									cticontainer.prg 			\
									cticontrol.prg 			\
									ctientry.prg 				\
									ctievents.prg 				\
									ctifiled.prg 				\
									ctifuncs.prg 				\
									ctihbox.prg 				\
									ctilabel.prg 				\
									ctilayout.prg 				\
									ctilist.prg 				\
									ctimain.prg 				\
									ctimenubar.prg 			\
									ctimenuitem.prg 			\
									ctimenu.prg 				\
									ctimenushell.prg 			\
									ctiobjectlist.prg 		\
									ctiobject.prg 				\
									ctioptionmenu.prg 		\
									ctipalette.prg 			\
									ctipushbutton.prg 		\
									ctiradiobutton.prg 		\
									ctiradiogroup.prg 		\
									ctisignal.prg 				\
									ctistatusbar.prg 			\
									ctitbrowse.prg 			\
									ctivbox.prg 				\
									ctiwidget.prg 				\
									ctiwindow.prg 				\
									ctizorder.prg

o_files 				= 			$(addsuffix .o, $(basename $(prg_files) $(c_files) ) )

ADDLIBS =
SRC_C_files 		= 			$(sort $(c_files) )
SRC_PRG_files 		= 			$(sort $(prg_files) )

export

######################################################################################
###################################################################################### local rules

all: Makefile links $(o_files) $(STARGET)

hash1 :
	$(E_xx)$(Clip_M_Dir)/init/LinkAllFiles.sh clip-cti

cfg :
	$(E_mkD)mkdir -p$(V) $(Clip_I_Dir)/$(PROG)
	$(E_cp)cp --remove-destination -fpu$(V) include/*.ch $(Clip_I_Dir)/$(PROG)
	$(E_cp)cp --remove-destination -fpu$(V) include/ci_cti.ch $(Clip_I_Dir)/
	$(E_cp)cp --remove-destination -fpu$(V) ./.calendar $(INSTDIR)/etc

cleanc:
	$(E_rm)rm -f$(V) *.c *.b
	$(E_rm)cd include && rm -f$(V) *.bak cti *.BAK $(TARGET).*

distcleanc :
	$(E_rm)rm -rf$(V) *.g

install:all install-lib install-example

links:
	$(E_ln)[ -L include/cti ] 						\
		|| (cd include && ln -sf$(V) . cti)
	$(E_ln)[ -L ./cti ] 						\
		|| ln -sf$(V) ./include ./cti

include $(Makefile_o_in)

include $(Makefile_end_in)

indent : Makefile
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) *.h  || true
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) *.c  || true
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) */*.h  || true
	$(E_xx)$(Clip_B_Dir)/ci_mindent$(SCRIPTSUFF) */*.c  || true

