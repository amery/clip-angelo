#
#                                            clip/libcliptask/Makefile.in
#

Local_Depend = ../include/*.ch ../include.h/*.h
TEST_ADDOBJS = ../compiler/coll.o ../compiler/list.o ../libclipmain/hash.o
PTH_LIBS= -lpth
PTH_TEST= pth_tst$(EXESUFF)
OBJS = pth_task.o
PROG = cliptask

################################################################################################################

all install : cl_cfg.h Makefile $(ATARGET)

cfg:
	$(E_cp)cp --remove-destination -fu$(V) *.h $(Clip_I_Dir)/

include $(Makefile_o_in)

../libclipmain/coll.o : ../libclipmain/coll.c Makefile
	$(E_cd)cd ../libclipmain																		\
		&& ( [ -f Makefile ] || ( [ -x $(CONFIGURE_SH) ] && $(CONFIGURE_SH) ) )		\
		&& $(MAKE)  coll.o $(MAKEFLAGS) $(ADDMAKECMDGOALS)

../libclipmain/list.o : ../libclipmain/list.c Makefile
	$(E_cd)cd ../libclipmain  																		\
		&& ( [ -f Makefile ] || ( [ -x $(CONFIGURE_SH) ] && $(CONFIGURE_SH) ) )		\
		&& $(MAKE)  list.o $(MAKEFLAGS) $(ADDMAKECMDGOALS)

../libclipmain/hash.o : ../libclipmain/hash.c Makefile
	$(E_cd)cd ../libclipmain  																		\
		&& ( [ -f Makefile ] || ( [ -x $(CONFIGURE_SH) ] && $(CONFIGURE_SH) ) )		\
		&& $(MAKE)  hash.o $(MAKEFLAGS) $(ADDMAKECMDGOALS)

cl_cfg.h :
	$(E_e)$(Trace)
	$(E_xx)./cl_conf

pth_task.o: pth_task.c task.h  Makefile
	$(E_if)if [ -f $(subst .o,.g,$@) ] ; then 	\
		$(Trace_c_d) ; 									\
		$(CC) $(CFLAGS) -g -c $< ; 					\
	else 														\
		$(Trace_c) ; 										\
		$(CC) $(CFLAGS) -c $< ; 						\
	fi

cl_tst$(EXESUFF): $(OBJS) $(ADDOBJS) cl_tst.o $(ATARGET) Makefile
	$(E_e)$(Trace_c)
	$(E_cc)$(CC) $(CFLAGS) -o $@ cl_tst.o $(OBJS) $(TEST_ADDOBJS) $(ATARGET)
	$(E_xx)$@

task_tst$(EXESUFF) : $(ADDOBJS) task_tst.o $(ATARGET) Makefile
	$(E_e)$(Trace_c)
	$(E_cc)$(CC) $(CFLAGS) task_tst.c -o $@ $(TEST_ADDOBJS) $(ATARGET) $(PTH_LIBS)

std_tst: pth_tst$(EXESUFF) Makefile

pth_tst$(EXESUFF): pth_tst.c Makefile
	$(E_e)$(Trace_c)
	$(E_cc)$(CC) pth_tst.c -o $@ $(PTH_LIBS)
	$(E_xx)$@

test_cl : cl_tst$(EXESUFF)
test_pth : pth_tst$(EXESUFF)

cleanc:
	$(E_rm)rm -f$(V) $(PTH_TEST) task_tst$(EXESUFF) pth_tst$(EXESUFF)
	$(E_rm)rm -f$(V) USE*
	$(E_rm)rm -f$(V) cl_cfg.h $(ATARGET)

distcleanc :
	$(E_rm)rm -rf$(V) *.g

include $(Makefile_end_in)

