clean : $(DIRS_TO_SCAN) example cleanc
	$(E_rm)rm -f$(V) $(Files2Remove) \
				|| true
	$(E_rm)([ -L include ] 				\
				&& rm -f$(V) include 	\
			)									\
			|| true
	$(E_rm)([ -L locale.po ] 			\
				&& rm -f$(V) locale.po 	\
			)									\
			|| true
	$(E_rm)([ -L charsets ] 			\
				&& rm -f$(V) charsets 	\
			)									\
			|| true
	$(E_rm)([ -L clipinclude.clip ] 				\
				&& rm -f$(V) clipinclude.clip 	\
			)												\
			|| true
	$(E_rm)( [ -f Makefile.in ] 			\
					&& rm -f$(V) Makefile 	\
			) 										\
			|| true
	$(E_rm)( [ -f configure.in ] 			\
					&& rm -f$(V) configure	\
			) 										\
			|| true
