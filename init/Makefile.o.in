%.o : %.c Makefile
	$(E_if)if [ -f $(subst .o,.g,$@) ] ; then 		\
		$(Trace_c_d) ; 							\
		$(CC) -g $(C_FLAGS) -c $< ; 	\
	else 												\
		$(Trace_c) ; 								\
		$(CC) $(C_FLAGS) -c $< ; 		\
	fi

.c.o :  Makefile
	$(E_if)if [ -f $(subst .o,.g,$@) ] ; then 		\
		$(Trace_c_d) ; 							\
		$(CC) -g $(C_FLAGS) -c $< ; 	\
	else 												\
		$(Trace_c) ; 								\
		$(CC) $(C_FLAGS) -c $< ; 		\
	fi

%.o : %.prg Makefile $(CLIP)
	$(E_if)if [ -f $(subst .o,.g,$@) ] ; then 			\
		$(Trace_prg_d) ; 								\
		$(CLIP) -g $(CLIPFLAGS) $< ; 	\
	else 													\
		$(E_clip)$(CLIP) $(CLIPFLAGS) $< ; 		\
		$(Trace_prg) ; 								\
		$(CLIP) $(CLIPFLAGS) $< ;		\
	fi

