CLIPLIBS  = -L$(Clip_L_Dir) -lclip-codb -lclip-r2d2
OBJS  =
#cobra_conn.o
CHS  =
#corba_serv.ch
MODULES =
#module1.po codbtview.po
.SUFFIXES: .prg .o .po

DIRS_TO_SCAN = mod-ini mod-clip

all : Makefile $(DIRS_TO_SCAN) kamache$(EXESUFF) $(MODULES) #AUTH WRAP

cfg :

cleanc :
	$(E_rm)rm -rf$(V) *.c *.b
	$(E_rm)rm -rf$(V) kamache$(EXESUFF) *.pro

distcleanc :
	$(E_rm)rm -rf$(V) *.g

kamache$(EXESUFF) : kamache.prg $(CHS) $(OBJS) Makefile $(CLIP) $(LIBCLIP)
#	$(Trace_clip)
#	$(CLIP) $(CLIPFLAGS) -o$@ -es kamache.prg $(OBJS) $(CLIPLIBS)
	$(E_clip)if [ -f $(subst .prg,.g,$<) ] ; then 							\
		$(Trace_clip_d) 	;														\
		$(CLIP) $(CLIPFLAGS) -g -o $@ -es $< $(OBJS) $(CLIPLIBS) ;	\
	else 																				\
		$(Trace_clip) 		;														\
		$(CLIP) $(CLIPFLAGS) -o $@ -es $< $(OBJS) $(CLIPLIBS) ;		\
	fi

install : all
	$(E_mkD)mkdir -p$(V) $(DESTDIR)/kamache
	$(E_mkD)mkdir -p$(V) $(DESTDIR)/kamache/mod-cache
	$(E_cp)cp --remove-destination -fpu$(V) kamache$(EXESUFF) $(DESTDIR)/kamache
	$(E_cp)cp --remove-destination -fpu$(V) kamache.ini $(DESTDIR)/kamache

include $(Makefile_o_in)

include $(Makefile_end_in)

