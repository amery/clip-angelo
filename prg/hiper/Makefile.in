#
#                                            prg/hiper/Makefile.in
#
BINS 				= 			$(sort 									\
											clip_hindex$(EXESUFF) 	\
											clip_hseek$(EXESUFF) 	\
								)

export

######################################################################################
###################################################################################### local rules

all : Makefile $(OBJS) $(BINS)

hash1 :

cfg :

install :	all
	$(E_cp)cp --remove-destination -fpu$(V) clip_hindex$(EXESUFF) $(INSTDIR)/bin/clip_hindex$(EXESUFF)
	$(E_cp)cp --remove-destination -fpu$(V) clip_hseek$(EXESUFF) $(INSTDIR)/bin/clip_hseek$(EXESUFF)

cleanc:
	$(E_rm)rm -rf$(V) $(BINS) *.c *.b

distcleanc :
	$(E_rm)rm -rf$(V) *.g

include $(Makefile_o_in)

clip_hindex$(EXESUFF):	clip_hindex.prg Makefile $(CLIP) $(LIBCLIP)
	$(E_clip)if [ -f $(subst .prg,.g,$<) ] ; then 		\
		$(Trace_clip_d) 	;										\
		$(CLIP) $(CLIPFLAGS) -g -o$@ -e $< ; 				\
	else 																\
		$(Trace_clip) 		;										\
		$(CLIP) $(CLIPFLAGS) -o$@ -e $< ;					\
	fi

clip_hseek$(EXESUFF):	clip_hseek.prg Makefile $(CLIP) $(LIBCLIP)
	$(E_clip)if [ -f $(subst .prg,.g,$<) ] ; then 		\
		$(Trace_clip_d) 	;										\
		$(CLIP) $(CLIPFLAGS) -g -o$@ -e $< ; 				\
	else 																\
		$(Trace_clip) 		;										\
		$(CLIP) $(CLIPFLAGS) -o$@ -e $< ;					\
	fi

include $(Makefile_end_in)

