#
#                                            prg/udbx/Makefile.in
#
#
# 		from cliplibs/clip-gtk2

Depend_on 		= 			$(Clip_L_Dir)/libclip-codb.so $(Clip_L_Dir)/libclip-gtk.so
OBJS  			= 			$(sort 								\
											abx_obj.o 				\
											abx_menu.o 				\
											abx_events.o 			\
											abx_funcs.o 			\
											abx_meta_browse.o 	\
											abx_getobj.o 			\
											abx_data_browse.o 	\
								)
BIN 				= 			codb_abx$(EXESUFF)
DIRS_TO_SCAN 	= 			plugins

LIBS 				+= 		-lclip-codb -lclip-gtk -lclip $(PIXBUFLIBS)

export

######################################################################################
###################################################################################### local rules

all: $(DIRS_TO_SCAN) $(OBJS) $(BIN)

hash1 :

cfg :

install: all
	$(E_mkD)mkdir -p$(V) $(INSTDIR)/codb_abx/plugins
	$(E_cp)cp --remove-destination -Rfpu$(V) plugins/* $(INSTDIR)/codb_abx/plugins
	$(E_cp)cp --remove-destination -fpu$(V) codb_abx$(EXESUFF) $(INSTDIR)/bin/

cleanc : $(DIRS_TO_SCAN)
	$(E_rm)rm -rf$(V) *.c *.b $(BIN)

distcleanc :
	$(E_rm)rm -rf$(V) *.g

$(BIN): codb_abx.prg $(OBJS) $(CLIP) $(LIBCLIP) $(Depend_on)
	$(E_clip)if [ -f $(subst .prg,.g,$<) ] ; then 					\
		$(Trace_clip_d) 	;													\
		$(CLIP) $(CLIPFLAGS) -g -o $@ -es $< $(OBJS) $(LIBS) ;	\
	else 																			\
		$(Trace_clip) 		;													\
		$(CLIP) $(CLIPFLAGS) -o $@ -es $< $(OBJS) $(LIBS) ;		\
	fi

commit:
	_cvs commit

include $(Makefile_o_in)

include $(Makefile_end_in)

