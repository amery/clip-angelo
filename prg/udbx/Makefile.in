#
#                                            prg/udbx/Makefile.in
#
Local_Depend =
#$(Clip_L_Dir)/libclip-codb.so
Local_Depend +=
# $(Clip_L_Dir)/libclip-gtk.so

#CLIP	= $(CLIPROOT)/bin/clip
#CLIPFLAGS = -Obl -I./include
CLIPLIBS  = -L$(Clip_L_Dir) -lclip-codb -lclip-gtk2 -lclip

OBJS  = $(sort abx_obj.o abx_menu.o abx_events.o abx_funcs.o abx_meta_browse.o abx_getobj.o \
	abx_data_browse.o )

BIN = codb_abx$(EXESUFF)

.SUFFIXES: .prg .o .po

DIRS_TO_SCAN = plugins

################################################################################################################

all: $(DIRS_TO_SCAN) $(BIN)

cfg :

install: all
	$(E_mkD)mkdir -p$(V) $(INSTDIR)/codb_abx/plugins
	$(E_cp)cp --remove-destination -Rfpu$(V) plugins/* $(INSTDIR)/codb_abx/plugins
	$(E_cp)cp --remove-destination -fpu$(V) codb_abx$(EXESUFF) $(INSTDIR)/bin/

cleanc : $(DIRS_TO_SCAN)
	$(E_rm)rm -rf$(V) *.c *.b $(BIN)

distcleanc :
	$(E_rm)rm -rf$(V) *.g

$(BIN): codb_abx.prg $(OBJS) $(CLIP) $(LIBCLIP)
	$(E_if)if [ -f $(subst .prg,.g,$<) ] ; then 							\
		$(Trace_clip_d) 	;														\
		$(CLIP) $(CLIPFLAGS) -g -o $@ -es $< $(OBJS) $(CLIPLIBS) ;	\
	else 																				\
		$(Trace_clip) 		;														\
		$(CLIP) $(CLIPFLAGS) --debug=0 -o $@ -es $< $(OBJS) $(CLIPLIBS) ;		\
	fi

include $(Makefile_o_in)

include $(Makefile_end_in)

