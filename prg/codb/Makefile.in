#
#                                            prg/codb/Makefile.in
#
Local_Depend =
# $(Clip_L_Dir)/libclip-codb.so
Local_Depend +=
# $(Clip_L_Dir)/libcodb-query.so

CLIPLIBS  = -lclip-codb -lcodb-query
TARGET = codb$(EXESUFF)
OBJS  =
# codb.o
.SUFFIXES: .prg .o .po

################################################################################################################

all : Makefile $(TARGET)

cfg :

cleanc :
	$(E_rm)rm -f$(V) *.c *.b
	$(E_rm)rm -f$(V) $(TARGET)

distcleanc :
	$(E_rm)rm -rf$(V) *.g

$(TARGET): codb.prg $(OBJS) Makefile $(CLIP) $(LIBCLIP)
	$(E_if)if [ -f $(subst .prg,.g,$<) ] ; then 							\
		$(Trace_clip_d) 	;														\
		$(CLIP) $(CLIPFLAGS) -g -o $@ -esn $< $(OBJS) $(CLIPLIBS) ;	\
	else 																				\
		$(Trace_clip) 		;														\
		$(CLIP) $(CLIPFLAGS) --debug=0 -o $@ -esn $< $(OBJS) $(CLIPLIBS) ;		\
	fi

install : all
	$(E_cp)cp --remove-destination -fpu$(V) $(TARGET) $(Clip_B_Dir)/

include $(Makefile_o_in)

include $(Makefile_end_in)

