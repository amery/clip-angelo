#
#                                            prg/bdbfs/Makefile.in
#
Local_Depend = *.ch


#CLIP	= $(CLIPROOT)/bin/clip
CLIPFLAGS += -n -I $(Clip_I_Dir)/clip-netto
CLIPLIBS  =

LIBS  = -L$(Clip_L_Dir) -lclip-netto -lclip-nanfor
OBJS  =	$(sort 	getsys.o common.o 										\
						help.o print.o 											\
						mdbedit.o mainmenu.o aktions.o obsolete.o 		\
						cliplib.o filer.o viewer.o editor.o foxpro.o 	\
						tb2html.o menu.o 											\
						_clip.o modistru.o vkrz.o 								\
						nanfor.o nettos.o 										\
						errorsys.o 													\
						config.o examplep.o )

.SUFFIXES: .prg .o

#LANG=ru_RU.KOI8-R
#export LANG

################################################################################################################

all: Makefile bdbf$(EXESUFF)

cfg :

bdbf$(EXESUFF):	bdbf.prg $(OBJS) Makefile $(CLIP) $(LIBCLIP)
	$(E_if)if [ -f $(subst .prg,.g,$<) ] ; then 						\
		$(Trace_clip_d) 	;													\
		$(CLIP) $(CLIPFLAGS) -s -g -o $@ -e $< $(OBJS) $(LIBS) ;	\
	else 																			\
		$(Trace_clip) ;														\
		$(CLIP) $(CLIPFLAGS) --debug=0 -s -o $@ -e $< $(OBJS) $(LIBS) ;		\
	fi

cleanc:
	$(E_rm)rm -rf$(V) *.c *.b
	$(E_rm)rm -rf$(V) bdbf$(EXESUFF) test$(EXESUFF)

distcleanc :
	$(E_rm)rm -rf$(V) *.g

install: all
	$(E_cp)cp --remove-destination -fpu$(V) bdbf$(EXESUFF) $(INSTDIR)/bin/bdbf$(EXESUFF)
	$(E_cp)cp --remove-destination -fpu$(V) *.hlp $(INSTDIR)/bin/
	$(E_cp)cp --remove-destination -Rfpu$(V) locale.po/* $(INSTDIR)/locale.po/
	$(E_rm)rm -rf$(V) `find $(INSTDIR)/locale.po -type d -name CVS -print`

include $(Makefile_o_in)

include $(Makefile_end_in)

