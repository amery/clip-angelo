#
Local_Depend =
#$(Clip_L_Dir)/libclip-codb.so


#CLIP	= $(CLIPROOT)/bin/clip
#CLIPFLAGS = -lwO
CLIPLIBS  = -lclip-codb
OBJS = funcs_a.o funcs_c.o funcs_d.o funcs_i.o funcs_w.o funcs_x.o funcs_r.o
INCS = funcs_s.prg ocmng.ch
PROGS = ocmng$(EXESUFF) xml2xmo$(EXESUFF)
#PROGS = ocmng_compil$(EXESUFF) ocmng_dump$(EXESUFF) ocmng_install$(EXESUFF) ocmng$(EXESUFF)

.SUFFIXES: .prg .o .po

################################################################################################################

all: Makefile $(OBJS) $(PROGS)
	#./xml2xmo --profile components

cfg :

cleanc:
	$(E_rm)rm -f$(V) $(PROGS) *.c *.pro *.b
	$(E_rm)./cleanxmo.sh

distcleanc :
	$(E_rm)rm -rf$(V) *.g

include $(Makefile_o_in)

ocmng$(EXESUFF): ocmng.prg  $(OBJS) $(INCS) Makefile $(CLIP) $(LIBCLIP)
	$(E_if)if [ -f $(subst .prg,.g,$<) ] ; then 							\
		$(Trace_clip_d) 	;														\
		$(CLIP) $(CLIPFLAGS) -g -o $@ -esM $< $(OBJS) $(CLIPLIBS) ;	\
	else 																				\
		$(Trace_clip) 		;														\
		$(CLIP) $(CLIPFLAGS) --debug=0 -o $@ -esM $< $(OBJS) $(CLIPLIBS) ;		\
	fi

xml2xmo$(EXESUFF): xml2xmo.prg  $(OBJS) $(INCS) $(CLIP) $(LIBCLIP)
	$(E_if)if [ -f $(subst .prg,.g,$<) ] ; then 							\
		$(Trace_clip_d) 	;														\
		$(CLIP) $(CLIPFLAGS) -g -o $@ -esM $< $(OBJS) $(CLIPLIBS) ;	\
	else 																				\
		$(Trace_clip) 		;														\
		$(CLIP) $(CLIPFLAGS) --debug=0 -o $@ -esM $< $(OBJS) $(CLIPLIBS) ;		\
	fi

install: all
	$(E_cp)cp --remove-destination -fpu$(V) $(PROGS) cleanxmo.sh $(INSTDIR)/bin

include $(Makefile_end_in)
