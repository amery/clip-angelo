#
#                                            prg/cobra_clnt/Makefile.in
#
Local_Depend =
#$(Clip_L_Dir)/libclip-codb.so


#CLIP	= clip
#CLIP	= $(CLIPROOT)/bin/clip
CLIPFLAGS += -n
#CLIPLIBS  = #-lclip-codb
OBJS  = objbrowse.o tviewbrowse.o
.SUFFIXES: .prg .o .po

################################################################################################################

all: Makefile cobra_clnt1$(EXESUFF)

cfg :

cleanc:
	$(E_rm)rm -rf$(V) *.c *.b
	$(E_rm)rm -rf$(V) cobra_clnt1$(EXESUFF)

distcleanc :
	$(E_rm)rm -rf$(V) *.g

cobra_clnt1$(EXESUFF) : cobra_clnt1.prg $(OBJS) Makefile $(CLIP) $(LIBCLIP)
	$(E_if)if [ -f $(subst .prg,.g,$<) ] ; then 			\
		$(Trace_clip_d) 	;										\
		$(CLIP) $(CLIPFLAGS) -g -o $@ -es $< $(OBJS) ;	\
	else 																\
		$(Trace_clip) 		;										\
		$(CLIP) $(CLIPFLAGS) --debug=0 -o $@ -es $< $(OBJS) ;		\
	fi

install : all
	$(E_mkD)mkdir -p$(V) $(INSTDIR)/cobra
	$(E_cp)cp --remove-destination -fu$(V) cobra_clnt1$(EXESUFF) $(Clip_B_Dir)/
	$(E_cp)cp --remove-destination -fu$(V) cobra_clnt.ini $(INSTDIR)/cobra

include $(Makefile_o_in)

include $(Makefile_end_in)

