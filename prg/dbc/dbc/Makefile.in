#
#                                            prg/dbc/dbc/Makefile.in
#
Local_Depend 			= 			../dbc/*.ch
OBJS  					= 			$(sort 						\
													move.o 			\
													modistru.o 		\
													commands.o 		\
													view.o 			\
													query.o 			\
													pechdbc.o 		\
													prcmenu.o \
										)
LIBS 						= 			../procs.a

export

######################################################################################
###################################################################################### local rules

dbc$(EXESUFF):  dbc.prg $(OBJS) $(CLIP) $(LIBCLIP) $(LIBS)
	$(E_clip)if [ -f $(subst .prg,.g,$<) ] ; then 					\
		$(Trace_clip_d) 	;													\
		$(CLIP) $(CLIPFLAGS) -se -g -o$@ $< $(OBJS) $(LIBS) ;		\
	else 																			\
		$(Trace_clip) 		;													\
		$(CLIP) $(CLIPFLAGS) -se -o$@ $< $(OBJS) $(LIBS) ;			\
	fi

hash1 :

cfg :

cleanc:
	$(E_rm)rm -rf$(V) dbc$(EXESUFF) *.c dbc dbc.exe *.ntx

distcleanc :
	$(E_rm)rm -rf$(V) *.g

install : all
	$(E_cp)cp --remove-destination -fpu$(V) dbc$(EXESUFF) $(INSTDIR)/bin/

all : $(OBJS) dbc$(EXESUFF)

include $(Makefile_o_in)

include $(Makefile_end_in)

