#
Local_Depend = ../dbc/deflist.ch

#CLIP	= $(CLIPROOT)/bin/clip
#CLIPFLAGS = -n -O -b
#CLIPLIBS  = ../procs.a
OBJS  = $(sort move.o modistru.o commands.o view.o query.o pechdbc.o prcmenu.o )
.SUFFIXES: .prg .o

LIBS = ../procs.a


dbc$(EXESUFF):  dbc.prg $(OBJS) $(CLIP) $(LIBCLIP) $(LIBS)
	$(E_clip)if [ -f $(subst .prg,.g,$<) ] ; then 						\
		$(Trace_clip_d) 	;													\
		$(CLIP) $(CLIPFLAGS) -se -g -o$@ $< $(OBJS) $(LIBS) ;		\
	else 																			\
		$(Trace_clip) 		;													\
		$(CLIP) $(CLIPFLAGS) -se -o$@ $< $(OBJS) $(LIBS) ;			\
	fi

cfg :

cleanc:
	$(E_rm)rm -rf$(V) dbc$(EXESUFF) *.c dbc dbc.exe *.ntx

distcleanc :
	$(E_rm)rm -rf$(V) *.g

install : all
	$(E_cp)cp --remove-destination -fpu$(V) dbc$(EXESUFF) $(DESTDIR)/bin/

all: dbc$(EXESUFF)

include $(Makefile_o_in)

include $(Makefile_end_in)

