Local_Depend =

#CLIP	= $(CLIPROOT)/bin/clip

# need package libpam0g-dev

LIBS = -lpam
#CC = gcc
#CFLAGS = -O

all: Makefile pam-auth$(EXESUFF)

cfg :

pam-auth$(EXESUFF): pam-auth.c Makefile
	$(E_cc)if [ -f $(subst .c,.g,$<) ] ; then 	\
		$(Trace_c_d) ; 									\
		$(CC) -g $(C_FLAGS) $< -o $@ $(LIBS) ; 	\
	else 														\
		$(Trace_c) ; 										\
		$(CC) $(C_FLAGS) $< -o $@ $(LIBS) ; 		\
	fi

cleanc:
	$(E_rm)rm -f$(V)  pam-auth$(EXESUFF)

distcleanc :
	$(E_rm)rm -rf$(V) *.g

install:all
	$(E_mkD)mkdir -p $(DESTDIR)/cobra/auth
	$(E_rm)cd $(DESTDIR)/cobra/auth; rm -f$(V) pam-auth$(EXESUFF)
	$(E_cp)cp --remove-destination -fpu$(V) Makefile make_mod.sh other pam* $(DESTDIR)/cobra/auth
	$(E_if)cd $(DESTDIR)/cobra/auth; test -z $(DESTDIR) && sudo ./make_mod.sh || exit 0

include $(Makefile_o_in)

include $(Makefile_end_in)

