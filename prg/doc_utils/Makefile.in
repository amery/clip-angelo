#
#                                            prg/doc_utils/Makefile.in
#
BINS 				= 		$(sort 								\
										ftosgml$(EXESUFF) 	\
										ctosgml$(EXESUFF) 	\
							)
export

######################################################################################
###################################################################################### local rules

all : Makefile $(OBJS) $(BINS)

hash1 :

cfg :

ftosgml$(EXESUFF) :	ftosgml.prg $(OBJS) Makefile $(CLIP) $(LIBCLIP)
	$(E_clip)if [ -f $(subst .prg,.g,$<) ] ; then 		\
		$(Trace_clip_d) 	;										\
		$(CLIP) $(CLIPFLAGS) -o$@ -g -eslN $< ; 			\
	else 																\
		$(Trace_clip) 		;										\
		$(CLIP) $(CLIPFLAGS) -o$@ -e $< ;					\
	fi

ctosgml$(EXESUFF) :	ctosgml.prg $(OBJS) Makefile $(CLIP) $(LIBCLIP)
	$(E_clip)if [ -f $(subst .prg,.g,$<) ] ; then 		\
		$(Trace_clip_d) 	;										\
		$(CLIP) $(CLIPFLAGS) -o$@ -g -eslN $< ; 			\
	else 																\
		$(Trace_clip) 		;										\
		$(CLIP) $(CLIPFLAGS) -o$@ -eslN $< ;				\
	fi

include $(Makefile_o_in)

cleanc :
	$(E_rm)rm -rf$(V) *.c *.b $(BINS)
	$(E_rm)rm -rf$(V) sgml/*

distcleanc :
	$(E_rm)rm -rf$(V) *.g

install : all
	$(E_cp)cp --remove-destination -fpu$(V) ftosgml$(EXESUFF) $(Clip_B_Dir)/
	$(E_cp)cp --remove-destination -fpu$(V) ctosgml$(EXESUFF) $(Clip_B_Dir)/

include $(Makefile_end_in)

