#
#                                            prg/doc_utils/Makefile.in
#
Local_Depend =

CLIPLIBS  =

LIBS  =
OBJS  =

.SUFFIXES: .prg .o

################################################################################################################

all : Makefile ftosgml$(EXESUFF) ctosgml$(EXESUFF)

cfg :

ftosgml$(EXESUFF) :	ftosgml.prg $(OBJS) Makefile $(CLIP) $(LIBCLIP)
	$(E_if)if [ -f $(subst .prg,.g,$<) ] ; then 			\
		$(Trace_clip_d) 	;										\
		$(CLIP) $(CLIPFLAGS) -o$@ -g -e $< ; 				\
	else 																\
		$(Trace_clip) 		;										\
		$(CLIP) $(CLIPFLAGS) --debug=0 -o$@ -e $< ;					\
	fi

ctosgml$(EXESUFF) :	ctosgml.prg $(OBJS) Makefile $(CLIP) $(LIBCLIP)
	$(E_if)if [ -f $(subst .prg,.g,$<) ] ; then 			\
		$(Trace_clip_d) 	;										\
		$(CLIP) $(CLIPFLAGS) -o$@ -g -e $< ; 				\
	else 																\
		$(Trace_clip) 		;										\
		$(CLIP) $(CLIPFLAGS) --debug=0 -o$@ -e $< ;					\
	fi

include $(Makefile_o_in)

cleanc :
	$(E_rm)rm -rf$(V) *.c *.b ftosgml$(EXESUFF) ctosgml$(EXESUFF)
	$(E_rm)rm -rf$(V) sgml/*

distcleanc :
	$(E_rm)rm -rf$(V) *.g

install : all
	$(E_cp)cp --remove-destination -fpu$(V) ftosgml$(EXESUFF) $(Clip_B_Dir)/
	$(E_cp)cp --remove-destination -fpu$(V) ctosgml$(EXESUFF) $(Clip_B_Dir)/

include $(Makefile_end_in)

