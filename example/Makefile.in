##
##										example/Makefile.in
##
##				called from all Makefile files
##
Local_Depend =

PROGS=	$(sort 								\
						hello$(EXESUFF) 		\
						test_dbf$(EXESUFF) 	\
						pg$(EXESUFF) 			\
						task$(EXESUFF) 		\
						task_msg$(EXESUFF) 	\
						mouse$(EXESUFF) 		\
						testlock$(EXESUFF) 	\
						reclock$(EXESUFF) 	\
						inkey$(EXESUFF) 		\
						tcpserv$(EXESUFF) 	\
						tcpclient$(EXESUFF) 	\
			)

export

######################################################################################
###################################################################################### local rules

all : Makefile $(PROGS)

hash1 :

cfg :

cleanc :
	$(E_rm)rm -f$(V) $(PROGS) *.a *.so *.dll *.o *.c *.exe *.dbf *.dbt *.ntx *.cdx *.ndx *.nm *.ex *.bak *.log || true

distcleanc :
	$(E_rm)rm -rf$(V) *.g

include $(Makefile_o_in)

install :
	$(E_mkD)[ -d $(Clip_D_Dir)/example/ ] || mkdir -p$(V) $(Clip_D_Dir)/example/
	$(E_cp)cp --remove-destination -Rfpu$(V) * $(Clip_D_Dir)/example/

strip :
	strip $(PROGS)

test.dbf : test.dbf.orig
	$(E_cp)cp test.dbf.orig test.dbf

hello$(EXESUFF) : hello.prg test.dbf $(CLIP) $(LIBCLIP)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -eslwM hello.prg

test_dbf$(EXESUFF) : test_dbf.prg $(CLIP) $(LIBCLIP)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -eslwM test_dbf.prg

pg$(EXESUFF) : pg.prg $(CLIP) $(LIBCLIP)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -eslM pg.prg

task$(EXESUFF) : task.prg $(CLIP) $(LIBCLIP)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -eswlM task.prg

task_msg$(EXESUFF) : task_msg.prg $(CLIP) $(LIBCLIP)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -eslwM task_msg.prg

mouse$(EXESUFF) : mouse.prg $(CLIP) $(LIBCLIP)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -eswlM mouse.prg

testlock$(EXESUFF) : testlock.prg $(CLIP) $(LIBCLIP)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -eswlM testlock.prg

reclock$(EXESUFF) : reclock.prg test.dbf $(CLIP) $(LIBCLIP)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -eslwM reclock.prg

inkey$(EXESUFF) : inkey.prg $(CLIP) $(LIBCLIP)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -eslwM inkey.prg

tcpserv$(EXESUFF) : tcpserv.prg $(CLIP) $(LIBCLIP)
	$(E_e)$(Trace_clip)
	$(CLIP) -o$@ -eswl tcpserv.prg

tcpclient$(EXESUFF) : tcpclient.prg $(CLIP) $(LIBCLIP)
	$(E_e)$(Trace_clip)
	$(CLIP) -eswl tcpclient.prg

include $(Makefile_end_in)
